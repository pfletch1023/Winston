=link_to "Back to Admin Panel", "/admin"
=form_for @work do |f|
  %table
    %tr
      %td Name
      %td=f.text_field :name
    %tr
      %td Role
      %td=f.text_field :role
    %tr
      %td Date
      %td= f.text_field :datetime
    %tr
      %td Description
      %td=f.text_area :description
    %tr
      %td Image
      %td=f.file_field :image
    %tr
      %td
      %td= f.submit
